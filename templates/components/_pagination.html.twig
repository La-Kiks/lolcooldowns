{% if pageCount > 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">Previous</a>
                </li>
            {% else %}
                <li class="page-item disabled"><a class="page-link" >Previous</a></li>
            {% endif %}
            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a></li>
                {% else %}
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="#">{{ page }}<span class="visually-hidden">(current)</span></a>
                    </li>
                {% endif %}
            {% endfor %}
            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">Next</a>
                </li>
            {% else %}
                <li class="page-item disabled"><a class="page-link" >Next</a></li>
            {% endif %}
        </ul>
    </nav>
{% endif %}